<%= form_with model: [@place, @entry], local: true, multipart: true do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :entry_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :entry_description %>
  </div>

  <div class="field">
    <%= form.label :occurred_on %>
    <%= form.date_select :occurred_on, id: :entry_occurred_on %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :entry_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
