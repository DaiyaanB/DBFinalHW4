<!-- Heavily edited by GPT to avoid issues with JS-->

<h1>New Entry for <%= @place.name %></h1>

<%= form_with model: [@place, @entry], local: true do |form| %>
  <% if @entry.errors.any? %>
    <!-- Error messages -->
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :occurred_on, "Occurred on" %>
    <%= form.date_field :occurred_on %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit "Save Entry" %>
  </div>
<% end %>
